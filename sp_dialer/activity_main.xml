<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="16dp"
    tools:context="com.example.akashsachdeva.speed_dialer.MainActivity"
    android:background="@android:color/holo_orange_light">

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:layout_above="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:background="@drawable/mcd"
        android:onClick="mcd"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4"
        android:background="@drawable/pizza"
        android:onClick="pizza"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speed Dialer for Foodies"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:layout_above="@+id/button"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginBottom="49dp"
        android:background="@drawable/dom"
        android:onClick="dom"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/button4"
        android:layout_marginTop="55dp"
        android:background="@drawable/kfc"
        android:onClick="kfc"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
